{
    "info": {
        "name": "Ramadan Vocabulary API",
        "description": "Complete API collection for the Ramadan Vocabulary backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "firebase_token",
            "value": "YOUR_FIREBASE_ID_TOKEN",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health",
            "item": [
                {
                    "name": "Server Health Check",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    }
                },
                {
                    "name": "Quran API Health",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/quran/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "quran",
                                "health"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Words",
            "item": [
                {
                    "name": "Get All Words",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/words?page=1&limit=50&sortBy=frequency&order=desc",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "words"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "50"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "frequency"
                                },
                                {
                                    "key": "order",
                                    "value": "desc"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Next Words to Learn",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{firebase_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/words/learn?limit=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "words",
                                "learn"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Word by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/words/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "words",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Search Words",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/words/search/Allah?limit=20",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "words",
                                "search",
                                "Allah"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Progress",
            "item": [
                {
                    "name": "Mark Word as Learned",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{firebase_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"wordId\": 1\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/progress",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "progress"
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Statistics",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{firebase_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/progress/stats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "progress",
                                "stats"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Learned Words",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{firebase_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/progress/learned?page=1&limit=50",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "progress",
                                "learned"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "50"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Remove Learned Word",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{firebase_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/progress/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "progress",
                                "1"
                            ]
                        }
                    }
                },
                {
                    "name": "Batch Add Words",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{firebase_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"wordIds\": [1, 2, 3, 4, 5]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/progress/batch",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "progress",
                                "batch"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Quran API",
            "item": [
                {
                    "name": "Get Example Verses",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/quran/examples?word=مِن&size=2",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "quran",
                                "examples"
                            ],
                            "query": [
                                {
                                    "key": "word",
                                    "value": "مِن"
                                },
                                {
                                    "key": "size",
                                    "value": "2"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Verse Details",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/quran/verse/2:255",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "quran",
                                "verse",
                                "2:255"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}